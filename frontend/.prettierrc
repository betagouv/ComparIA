{
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "semi": false,
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    },
    {
      "files": "locales/messages/*.json",
      "options": {
        "tabWidth": 4
      }
    }
  ],
  "tailwindStylesheet": "./src/css/app.css"
}
