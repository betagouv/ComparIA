{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "./env.d.ts",
    "./**/*.svelte",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "svelte"
    ],
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
  }
}